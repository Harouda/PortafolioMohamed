---
const { title, subtitle } = Astro.props;
---
<section class="py-10">
  <div class="hero-visual relative overflow-hidden rounded-xl bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950">
    <div class="absolute inset-0 opacity-70" style="background:
      radial-gradient(circle at 15% 20%, rgba(79, 70, 229, 0.18), transparent 35%),
      radial-gradient(circle at 85% 10%, rgba(236, 72, 153, 0.18), transparent 32%),
      radial-gradient(circle at 70% 70%, rgba(14, 165, 233, 0.18), transparent 38%);
    " aria-hidden="true"></div>
    <div class="absolute inset-0 bg-[linear-gradient(120deg,rgba(255,255,255,0.05)_1px,transparent_1px)] bg-[size:26px_26px] opacity-20" aria-hidden="true"></div>

    <div class="relative p-8 md:p-12">
      <div class="md:flex md:items-center md:justify-between md:gap-10">
        <div class="md:w-2/3 space-y-4">
          <span
            class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-xs font-semibold uppercase tracking-[0.16em] text-white/80 ring-1 ring-white/15"
          >
            Desarrollador web
          </span>
          <h1 class="text-3xl md:text-5xl font-bold text-white leading-tight drop-shadow-lg">{title}</h1>
          <p class="text-white/90 max-w-2xl">{subtitle}</p>
          <div class="flex flex-wrap gap-3 pt-2">
            <a href="#projects" class="btn-accent">Ver mi trabajo</a>
            <a href="/CV_Mohamed.pdf" class="btn-outline" download>Descargar CV</a>
          </div>
        </div>
        <div class="hidden md:block md:w-1/3">
          <div class="glass rounded-2xl p-4 flex items-center justify-center">
            <img
              src="/images/avatar-mohamed.jpg"
              alt="Foto de Mohamed Harouda"
              class="w-44 h-44 rounded-xl object-cover border border-white/10 shadow-2xl"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
