---
import '../styles/global.css';
const { title = 'Portafolio' } = Astro.props;
---
<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="Portafolio profesional - proyectos reales y decisiones tecnicas." />
  </head>
  <body class="antialiased text-slate-100">
    <header class="py-6 sticky top-0 z-20 bg-slate-950/85 backdrop-blur border-b border-white/10 shadow-sm">
      <div class="max-w-5xl mx-auto flex items-center justify-between px-6">
        <a href="/" class="flex items-center gap-3">
          <div class="w-9 h-9 rounded-full bg-amber-500 flex items-center justify-center text-white font-bold shadow-md">M</div>
          <div class="text-lg font-semibold tracking-tight text-white flex items-center gap-2">
            <span>Mohamed Harouda</span>
            <span class="text-xs px-3 py-1 rounded-full bg-amber-400/15 text-amber-200 border border-amber-400/40 whitespace-nowrap">
              En busca de prácticas...
            </span>
          </div>
        </a>
        <nav class="hidden md:flex items-center gap-4 text-sm text-slate-200">
          <a href="#projects" class="hover:text-white">Proyectos</a>
          <a href="#about" class="hover:text-white">Sobre mi</a>
          <a href="#skills" class="hover:text-white">Habilidades</a>
          <a href="https://www.linkedin.com/in/mohamed-harouda-7183a6232/" class="hover:text-white">LinkedIn</a>
          <a href="#contact" class="btn-outline">Contacto</a>
        </nav>
      </div>
    </header>

    <main class="max-w-5xl mx-auto px-6 py-8">
      <slot />
    </main>

    <footer class="mt-12 border-t border-white/10 pt-6">
      <div class="max-w-5xl mx-auto px-6 text-sm text-muted flex items-center justify-between">
        <div class="text-slate-300">© {new Date().getFullYear()} Mohamed Harouda</div>
        <div class="text-slate-300 flex gap-3">
          <a href="https://www.linkedin.com/in/mohamed-harouda-7183a6232/" class="text-amber-300 hover:text-amber-200">LinkedIn</a>
          <span class="text-slate-500">·</span>
          <a href="https://github.com" class="text-amber-300 hover:text-amber-200">GitHub</a>
        </div>
      </div>
    </footer>
  </body>
</html>
